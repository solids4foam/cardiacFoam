/*--------------------------------*- C++ -*----------------------------------*\
| 2D square slab for spiral wave simulations
| Size: 20 mm x 20 mm (x-y)
| z: 0.1 mm, 1 cell, empty BCs
\*---------------------------------------------------------------------------*/

FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}

scale   0.001;   // mm → m

vertices
(
    (0   0   0)
    (20  0   0)
    (20  20  0)
    (0   20  0)

    (0   0   0.1)
    (20  0   0.1)
    (20  20  0.1)
    (0   20  0.1)
);

blocks
(
    // Pick resolution:
    // dx = 0.5 mm → (40 40 1)
    // dx = 0.2 mm → (100 100 1)
    // dx = 0.1 mm → (200 200 1)
    hex (0 1 2 3 4 5 6 7) (40 40 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    walls
    {
        type wall;
        faces
        (
            (0 4 7 3)   // left
            (1 2 6 5)   // right
            (0 1 5 4)   // bottom
            (3 7 6 2)   // top
        );
    }

    frontAndBack
    {
        type empty;
        faces
        (
            (0 3 2 1)
            (4 5 6 7)
        );
    }
);

mergePatchPairs
(
);

