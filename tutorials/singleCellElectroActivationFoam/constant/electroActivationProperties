// ODE solver
//solver    RKF45;
solver    Euler;

// Maximum number of steps
maxSteps 1000000000;

// Relative tolerance
// Defaults to 1e-4
relTol 1e-6;

// Absolute tolerance
// Defaults to 1e-15
absTol 1e-6;

// Initial step size for ODE solver
initialODEStep 1e-6;


//Flag for the chosen tissue - epicardium, M-cells or endocardium. 

//tissue  epicardialCells;
tissue  mCells;
//tissue  endocardialCells;

//Type of ionic Model - TNNP; Gaur, Courtemanche, Bueno-Orovio

ionicModel Gaur; 


