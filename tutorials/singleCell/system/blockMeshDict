vertices
(
    (0 0 0)
    (20 0 0)
    (20 3 0)
    (0 3 0)
    (0 0 7)
    (20 0 7)
    (20 3 7)
    (0 3 7)
);

blocks
(
    // Three uniform, orthogonal meshes are used:

    // deltaX = 0.5 mm
    // hex (0 1 2 3 4 5 6 7) (40 6 14) simpleGrading (1 1 1)

    // deltaX = 0.2 mm
    // hex (0 1 2 3 4 5 6 7) (100 15 35) simpleGrading (1 1 1)

    // deltaX = 0.1 mm
    hex (0 1 2 3 4 5 6 7) (200 30 70) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    walls
    {
        type patch;
        faces
        (
            (3 7 6 2)
            (0 4 7 3)
            (2 6 5 1)
            (1 5 4 0)
            (0 3 2 1)
            (4 5 6 7)
        );
    }
);

mergePatchPairs
(
);

