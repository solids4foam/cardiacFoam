FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      numericalsolverProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// PDE-ODE solution algorithm
solveExplicit    no;

// Max courant number
CFL           0.1;

// ODE solver
solver    RKF45;
// solver    Euler;

// ODE solver parameters
initialODEStep 1e-5;
maxSteps 1000000000;

// Relative tolerance
// Defaults to 1e-4
// relTol 1e-6;

// Absolute tolerance
// Defaults to 1e-15
// absTol 1e-6;

// For eikonalElectroActivationFoam, two forms of the eikonal equation can be
// solved: an eikonal-diffusion equation or an eikonal-advection-diffusion
// This flag dictates which one is solved. Both should give the same result but
// the eikonal-advection-diffusion equation should converge faster as it
// includes an implicit linearisation of the nonlinear term
eikonalAdvectionDiffusionApproach yes;

// ************************************************************************* //
