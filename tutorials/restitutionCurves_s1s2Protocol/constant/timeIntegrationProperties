FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      numericalsolverProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// PDE-ODE solution algorithm
solveExplicit yes;

// ODE solver
// solver    RKF45;
solver    Euler;

// ODE solver parameters
initialODEStep 1e-5;
maxSteps 1000000000;

// Relative tolerance
// Defaults to 1e-4
// relTol 1e-6;

// Absolute tolerance
// Defaults to 1e-15
absTol 1e-6;

